<% if flash[:product_add_notice] %>
    <%= flash[:product_add_notice] %>
<% else flash[:delete_product] %>
    <%= flash[:delete_product] %>
<% end %>

<% @products.each do |product| %>
    <p>
        <%= product.name %>
        <%= product.price.to_s(:delimited) %>円
        <%= link_to '削除', product_path(product.id), method: :delete %>
        <%= link_to 'カートに追加する', new_cart_item_path(product_id: product.id), method: :get %>
    </p>
<% end %><br>

<%= link_to '商品を追加する', new_product_path %><br>
<%= link_to 'カートを見る', cart_path(current_cart.id) %>